{
	"luci-app-usbmodem": {
		"description": "Grant access to LuCI app usbmodem",
		"read": {
			"ubus": {
				"usbmodem.*": [
					"getModemInfo",
					"getNetworkInfo",
					"getSimInfo",
					"getDeferredResult",
					
					"send_ussd", "cancel_ussd", "send_command", "read_sms", "delete_sms", "search_operators",
					"set_operator", "get_settings", "set_network_mode"
				]
			}
		},
		"write": {
			"ubus": {
				"usbmodem.*": [
					"getModemInfo",
					"getNetworkInfo",
					"getSimInfo",
					"getDeferredResult",
					
					"info", "send_ussd", "cancel_ussd", "send_command", "read_sms", "delete_sms", "search_operators",
					"set_operator", "get_settings", "set_network_mode"
				]
			}
		}
	}
}
